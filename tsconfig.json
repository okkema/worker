  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "lib": ["esnext"],
    "types": ["@cloudflare/workers-types", "astro/client"]
